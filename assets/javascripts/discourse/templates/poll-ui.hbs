<div class="modal-body poll-ui-modal" style="overflow: visible">
  <div class="details">
    <table>
      <tbody>
        <tr>
          <td>{{i18n "poll_ui.poll_name_label"}}</td>
          <td>{{text-field id="poll-name" value=controller.pollName placeholderKey="poll_ui.poll_name_placeholder" }}</td>
          <td>{{i18n "poll_ui.poll_type_label"}}</td>
          <td>{{combo-box name="poll-type" valueAttribute="title" value=controller.pollType
            nameProperty="title" content=pollTypes }}</td>
        </tr>
      </tbody>
    </table>
    <table>
      <tbody>
        {{#if isMultipleOrNumberPoll}}
        <tr>
          <td>{{#if isNumberPoll}}{{i18n "poll_ui.poll_min_numeric_label" }}{{else}}{{i18n "poll_ui.poll_min_multiple_label" }}{{/if}}</td>
          <td class="numeric-field">{{text-field id="poll-min-value" value=controller.pollMinValue placeholderKey="poll_ui.poll_min_placeholder" maxlength="3" }}</td>
          <td>{{#if isNumberPoll}}{{i18n "poll_ui.poll_max_numeric_label" }}{{else}}{{i18n "poll_ui.poll_max_multiple_label" }}{{/if}}</td>
          <td class="numeric-field">{{text-field id="poll-max-value" value=controller.pollMaxValue placeholderKey="poll_ui.poll_max_placeholder" maxlength="3" }}</td>
        </tr>
        {{/if}}
        {{#if isNumberPoll}}
        <tr>
          <td>{{i18n "poll_ui.poll_step_label" }}</td>
          <td class="numeric-field">{{text-field id="poll-step-value" value=controller.pollStepValue placeholderKey="poll_ui.poll_step_placeholder" maxlength="3" }}</td>
          <td colspan="2"></td>
        </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
  <div class="content">
    {{each result in pollOptions itemView="poll-ui-option"}}
  </div>
</div>
<div class="modal-footer">
  <button class="btn btn-primary pull-right" {{action "apply"}}>{{i18n "poll_ui.insert_button"}}</button>
</div>